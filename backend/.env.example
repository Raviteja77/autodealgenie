# Python environment variables
POSTGRES_SERVER=postgres
POSTGRES_USER=autodealgenie
POSTGRES_PASSWORD=autodealgenie_password
POSTGRES_DB=autodealgenie
POSTGRES_PORT=5432

# MongoDB
MONGODB_URL=mongodb://mongodb:27017
MONGODB_DB_NAME=autodealgenie

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CONSUMER_GROUP=autodealgenie-consumer
KAFKA_TOPIC_DEALS=deals
KAFKA_TOPIC_NOTIFICATIONS=notifications

# OpenAI API (set your actual key here)
OPENAI_API_KEY=your-openai-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENAI_MODEL=gpt-4

# MarketCheck API (set your actual key here)
MARKET_CHECK_API_KEY=your-marketcheck-api-key-here

# Security - IMPORTANT: Generate a strong random secret key for production
# You can generate one with: openssl rand -hex 32
SECRET_KEY=CHANGEME-generate-random-secret-key-min-32-chars-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
ENVIRONMENT=development

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Project Info
PROJECT_NAME=AutoDealGenie API
VERSION=1.0.0
DESCRIPTION=AI-powered automotive deal management platform
API_V1_STR=/api/v1

# Mock Services (for development/testing - set to true to enable mock endpoints)
USE_MOCK_SERVICES=false
