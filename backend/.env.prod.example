# Production Environment Variables for GCP Free Tier
# Copy this to .env.prod and update values
# IMPORTANT: Store sensitive values in GCP Secret Manager

# Environment
ENVIRONMENT=production

# Project Info
PROJECT_NAME=AutoDealGenie API
VERSION=1.0.0
DESCRIPTION=AI-powered automotive deal management platform
API_V1_STR=/api/v1

# Security - CRITICAL: Generate strong random secret key
# Generate with: openssl rand -hex 32
# STORE IN GCP SECRET MANAGER: autodealgenie-secret-key-prod
SECRET_KEY=CHANGEME-generate-random-secret-key-min-32-chars-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# PostgreSQL - Use Supabase free tier or self-hosted
# Supabase format: postgresql://postgres:[PASSWORD]@db.[PROJECT_REF].supabase.co:5432/postgres
# STORE PASSWORD IN GCP SECRET MANAGER: autodealgenie-postgres-password-prod
POSTGRES_SERVER=db.xxxxxxxxxxxx.supabase.co
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-supabase-password
POSTGRES_DB=postgres
POSTGRES_PORT=5432

# Redis - Set USE_REDIS=false to use in-memory cache (recommended for free tier)
USE_REDIS=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# RabbitMQ - Set USE_RABBITMQ=false to use in-memory queue (recommended for free tier)
USE_RABBITMQ=false
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=autodealgenie
RABBITMQ_PASSWORD=autodealgenie_password
RABBITMQ_VHOST=/
RABBITMQ_QUEUE_DEALS=deals
RABBITMQ_QUEUE_NOTIFICATIONS=notifications

# OpenAI API
# STORE IN GCP SECRET MANAGER: autodealgenie-openai-key-prod
OPENAI_API_KEY=your-openai-api-key-here
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_BASE_URL=

# MarketCheck API
MARKET_CHECK_API_KEY=your-marketcheck-api-key-here

# CORS - Update with your Cloud Run frontend URL
BACKEND_CORS_ORIGINS=["https://autodealgenie-frontend-prod-xxxx.a.run.app"]

# Logging
LOG_LEVEL=INFO

# Mock Services - MUST be false in production
USE_MOCK_SERVICES=false

# Cloud Run Port (automatically set by Cloud Run)
PORT=8080
